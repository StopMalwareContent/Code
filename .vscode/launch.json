{
  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceFolder}/apps/dashboard",
      "command": "./node_modules/.bin/astro dev",
      "name": "Dashboard development server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "cwd": "${workspaceFolder}/apps/extension",
      "command": "./node_modules/.bin/vite dev",
      "name": "Extension development server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "preLaunchTask": "API Development",
      "cwd": "${workspaceFolder}/apps/api",
      "name": "API hot-reload development server",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
